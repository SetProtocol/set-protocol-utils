{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "target": "es5",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./types/**/*",
    "./node_modules/types-bn/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
