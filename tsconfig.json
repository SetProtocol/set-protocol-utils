{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["es2015", "es2016", "es2017"],
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "typeRoots": ["node_modules/@0xproject/typescript-typings/types", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*",
        "node_modules/@0xproject/typescript-typings/types"
      ]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*",
    "./types/*.ts"
  ]
}
